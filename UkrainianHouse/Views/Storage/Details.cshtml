@model IEnumerable<UkrainianHouse.Models.StorageMaterial>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<style>
    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
    }

        .styled-table thead tr {
            background-color: #434645;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
            column-width: auto;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #111111;
            }

            .styled-table tbody tr.active-row {
                font-weight: bold;
                color: #009879;
            }
</style>

<table class="styled-table">
    <thead>
        <tr>
            <td>
                Record number
            </td>

            <th>
                @Html.DisplayNameFor(model => model.storagedetails.MaterialId)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.storagedetails.Material)

            </th>

            <th>
                @Html.DisplayNameFor(model => model.storagedetails.Count)

            </th>

            <th>
                Price per unit
            </th>

            <th>
                Storage info
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.storagedetails.StorageId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.materialdetails.MaterialId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.materialdetails.MaterialName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.storagedetails.Count)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.materialdetails.Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.storagedetails.Comments)
                </td>

            </tr>
        }
    </tbody>


</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

