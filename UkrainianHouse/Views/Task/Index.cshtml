@model IEnumerable<UkrainianHouse.Models.EmployeeTask>

@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>

<style>
    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        
    }
        .styled-table thead tr {
            background-color: #434645;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
           column-width: auto;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #111111;
            }


</style>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="styled-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.taskdetails.TaskId)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeedetails.EmployeeId)

            </th>

            <th>
                @Html.DisplayNameFor(model => model.employeedetails.FirstName)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeedetails.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeedetails.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeedetails.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeedetails.Specialization)
            </th>
            <th style=" width:200px">
                @Html.DisplayNameFor(model => model.taskdetails.TaskName)
            </th>
            <th style=" width:150px">
                @Html.DisplayNameFor(model => model.taskdetails.EmpTaskInfo)
            </th>
            <th style=" width:150px">
                @Html.DisplayNameFor(model => model.statusdetails.StatusName)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.taskdetails.TaskId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employeedetails.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employeedetails.FirstName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.employeedetails.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.employeedetails.Age)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.employeedetails.Phone)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.employeedetails.Specialization)
            </td>

            <td style=" width:200px">
                @Html.DisplayFor(modelItem => item.taskdetails.TaskName)
            </td>

            <td style=" width:150px">
                @Html.DisplayFor(modelItem => item.taskdetails.EmpTaskInfo)
            </td>

            <td style=" width:150px">
                @Html.DisplayFor(modelItem => item.statusdetails.StatusName)
            </td>

            <td style="width:200px">
                <a asp-action="Edit" asp-route-id="@item.taskdetails.TaskId">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.taskdetails.TaskId">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.taskdetails.TaskId">Delete</a>
            </td>

        </tr>
        }
    </tbody>
</table>

